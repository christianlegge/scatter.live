mixin meta(tags)
  meta(property="og:title",content=tags.title)
  meta(property="og:description",content=tags.description)
  meta(property="og:url",content=tags.url)
  meta(property="og:image",content=tags.image)
  meta(property="og:type",content=tags.type)
  meta(name="twitter:card",content=tags.card)
  meta(name="twitter:title",content=tags.title)
  meta(name="twitter:description",content=tags.description)
  meta(name="twitter:image",content=tags.image)
  meta(property="og:site_name",content=(tags.site_name || "scatter.live"))
  meta(name="twitter:site",content="@scattertv")
  
mixin ga
  <!-- Global site tag (gtag.js) - Google Analytics -->
  script(async,src="https://www.googletagmanager.com/gtag/js?id=UA-101751986-2")
  script.
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    
    gtag('config', 'UA-101751986-2');
    
