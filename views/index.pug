include head

html
	head
		title=title
		+meta(meta)
		+ga
		+favicon
		+localforage
		+angular
		meta(name="viewport",width="device-width",initial-scale="1.0",maximum-scale="1.0",user-scalable="0")
		link(href="https://fonts.googleapis.com/css?family=Open+Sans",rel="stylesheet")
		link(rel="stylesheet",type="text/css",href="/stylesheets/index.css")
		script(type="text/javascript",src="/javascripts/streamGamesController.js")
		
	body
		.header
			.title #{title}
				.subtitle nothing to commit, working tree clean
			.socials
				each social in socials
					a(href=social.link)
						img(src="images/"+social.image)
		p #[a(href="/ChristianLeggeResume2020Public.pdf") Download my resume here.] For an unredacted version, reach out to #[a(href="mailto:"+email) #{email}] with a business inquiry.
		h2 projects, in order of significance
		div(style="border-top: 2px solid black")
			each project in projects
				- url = project.link || project.name
				.project
					.project-img
						a(href=url)
							img(src="images/"+project.name+".png")
					div
						p
							a(href=url) #{project.name}
						span #{project.description}
						p relevant technologies:
							ul
							each tech in project.tech
								li #{tech}
		br
		a(href="https://github.com/scatter-dev/scatter.live") This website and the projects hosted directly on it are open source!
		p Christian Legge, 2020.