include head

doctype html
html
  head
    title Crossword helper
    +jquery
    +localforage
    +angular
    link(rel="stylesheet",type="text/css",href="stylesheets/wordlengths.css")
    script(type="text/javascript",src="javascripts/wordlengths.js")
    
body(ng-app="wordlengths",ng-controller="wordlengthsController",onKeyDown="focusText()")
  .mainContainer
    #mainText(contenteditable,name="mainText",ng-model="mainText",ng-change="mainTextChanged()")
      div placeholder text
    .lineLengths
      span(ng-repeat="lineLength in lineLengths track by $index",ng-style="{'visibility': (lineLength == 0 ? 'hidden' : 'visible')}") {{lineLength}}
